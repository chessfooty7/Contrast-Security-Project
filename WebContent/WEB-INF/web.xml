<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  
  <servlet>  
    <servlet-name>MetricsServlet</servlet-name>  
    <servlet-class>com.metrics.myservlets.MetricsServlet</servlet-class>  
     <load-on-startup>0</load-on-startup>
  </servlet>  
  
  <servlet-mapping>  
    <servlet-name>MetricsServlet</servlet-name>  
    <url-pattern>/metrics</url-pattern>  
  </servlet-mapping>  
  
    <servlet>  
    <servlet-name>nasdaqservlet</servlet-name>  
    <servlet-class>com.metrics.myservlets.nasdaqservlet</servlet-class>  
     <load-on-startup>0</load-on-startup>
  </servlet>  
  
  <servlet-mapping>  
    <servlet-name>nasdaqservlet</servlet-name>  
    <url-pattern>/nasdaq</url-pattern>  
  </servlet-mapping>  
  
    <servlet>  
    <servlet-name>sp500servlet</servlet-name>  
    <servlet-class>com.metrics.myservlets.sp500servlet</servlet-class>  
     <load-on-startup>0</load-on-startup>
  </servlet>  
  
  <servlet-mapping>  
    <servlet-name>sp500servlet</servlet-name>  
    <url-pattern>/sp500</url-pattern>  
  </servlet-mapping>  
  
<filter>
  <filter-name>testfilter</filter-name>
  <filter-class>com.metrics.myfilter.testfilter</filter-class>
</filter>
  
 <filter-mapping>
  <filter-name>testfilter</filter-name>
  <url-pattern>/*</url-pattern>
</filter-mapping>

</web-app>